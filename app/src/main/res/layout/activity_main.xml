<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:layout_height="match_parent"
	android:background="?android:colorPrimaryDark"
	tools:context=".activity.MainActivity">
	
	<LinearLayout style="@style/kroov_head">
		<TextView style="@style/kroov_title"
			android:layout_weight="1"
			android:text="@string/app_name"/>
		
		<Switch style="@style/kroov_quarter"
			android:id="@+id/power"
			android:onClick="_activation"
			android:checked="true"/>
	</LinearLayout>
	<View style="@style/kroov_split"/>
	
	<ScrollView
		android:layout_height="match_parent"
		android:layout_width="match_parent">
		
		<LinearLayout
			android:orientation="vertical"
			android:paddingBottom="@dimen/linear_layout_bottom_gap"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<TextView style="@style/kroov_separator" android:text="@string/app"/>
			
			<LinearLayout style="@style/kroov_drawerx"
				android:onClick="_edges">
				<TextView style="@style/kroov_name"
					android:text="@string/edges"/>
				<TextView style="@style/kroov_description"
					android:text="@string/txt__edges"/>
			</LinearLayout>
			
			<View style="@style/kroov_split"/>
			
			<TextView style="@style/kroov_separator" android:text="@string/misc"/>
			
			<LinearLayout style="@style/kroov_drawerx"
				android:onClick="_ui">
				<TextView style="@style/kroov_name"
					android:text="@string/Interface"/>
				<TextView style="@style/kroov_description"
					android:text="@string/txt__interface"/>
			</LinearLayout>
			
			<View style="@style/kroov_split"/>
			
			<LinearLayout style="@style/kroov_drawerx"
				android:onClick="_misc">
				<TextView style="@style/kroov_name"
					android:text="@string/misc"/>
				<TextView style="@style/kroov_description"
					android:text="@string/txt__misc"/>
			</LinearLayout>
			
			<View style="@style/kroov_split"/>
			
			<TextView style="@style/kroov_separator" android:text="@string/other"/>
			
			<LinearLayout style="@style/kroov_drawerx"
				android:onClick="_permissions">
				<TextView style="@style/kroov_name"
					android:text="@string/permissions"/>
				<TextView style="@style/kroov_description"
					android:text="@string/txt__permissions"/>
			</LinearLayout>
			
			<View style="@style/kroov_split">
			
			</View>
			
		</LinearLayout>
		
	</ScrollView>
	
	
</LinearLayout>