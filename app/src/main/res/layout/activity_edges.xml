<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:padding="15dp"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?android:colorPrimaryDark"
	tools:ignore="RtlHardcoded"
	tools:context=".activity.EdgesActivity">
	
	<View
		android:id="@+id/mobile"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/draw_mobile_edges"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<View
		android:visibility="invisible"
		android:id="@+id/bottom"
		android:layout_height="10dp"
		android:layout_width="match_parent"
		android:background="@color/kroovColorTriggered"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		app:layout_constraintLeft_toLeftOf="@id/mobile"
		app:layout_constraintRight_toRightOf="@id/mobile"
		app:layout_constraintBottom_toBottomOf="@id/mobile"/>
	
	<View
		android:visibility="invisible"
		android:id="@+id/top"
		android:layout_height="10dp"
		android:layout_width="match_parent"
		android:background="@color/kroovColorTriggered"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		app:layout_constraintLeft_toLeftOf="@id/mobile"
		app:layout_constraintRight_toRightOf="@id/mobile"
		app:layout_constraintTop_toTopOf="@id/mobile"/>
	
	<View
		android:visibility="invisible"
		android:id="@+id/left"
		android:layout_width="10dp"
		android:layout_height="match_parent"
		android:background="@color/kroovColorTriggered"
		android:layout_marginTop="30dp"
		android:layout_marginBottom="30dp"
		app:layout_constraintBottom_toBottomOf="@+id/mobile"
		app:layout_constraintLeft_toLeftOf="@id/mobile"
		app:layout_constraintTop_toTopOf="@+id/mobile" />
	
	<View
		android:visibility="invisible"
		android:id="@+id/right"
		android:layout_width="10dp"
		android:layout_height="match_parent"
		android:background="@color/kroovColorTriggered"
		android:layout_marginTop="30dp"
		android:layout_marginBottom="30dp"
		app:layout_constraintBottom_toBottomOf="@+id/mobile"
		app:layout_constraintTop_toTopOf="@+id/mobile"
		app:layout_constraintRight_toRightOf="@id/mobile"/>
	
	<LinearLayout
		android:id="@+id/bottoms"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		app:layout_constraintLeft_toLeftOf="@id/mobile"
		app:layout_constraintRight_toRightOf="@id/mobile"
		app:layout_constraintBottom_toBottomOf="@id/mobile">
		
		<View
			android:visibility="invisible"
			android:id="@+id/bottom_left"
			android:layout_marginRight="5dp"
			android:background="@color/kroovColorTriggered"
			android:layout_height="10dp"
			android:layout_width="match_parent"
			android:layout_weight="1"/>
		
		<View
			android:visibility="invisible"
			android:id="@+id/bottom_right"
			android:layout_marginLeft="5dp"
			android:background="@color/kroovColorTriggered"
			android:layout_height="10dp"
			android:layout_width="match_parent"
			android:layout_weight="1"/>
	</LinearLayout>
	
	<LinearLayout
		android:orientation="horizontal"
		android:id="@+id/tops"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		app:layout_constraintLeft_toLeftOf="@id/mobile"
		app:layout_constraintRight_toRightOf="@id/mobile"
		app:layout_constraintTop_toTopOf="@id/mobile">
		
		<View
			android:visibility="invisible"
			android:id="@+id/top_left"
			android:layout_marginRight="10dp"
			android:background="@color/kroovColorTriggered"
			android:layout_height="10dp"
			android:layout_width="match_parent"
			android:layout_weight="1"/>
		
		<View
			android:visibility="invisible"
			android:id="@+id/top_right"
			android:layout_marginLeft="5dp"
			android:background="@color/kroovColorTriggered"
			android:layout_height="10dp"
			android:layout_width="match_parent"
			android:layout_weight="1"/>
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/lefts"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginTop="30dp"
		android:layout_marginBottom="30dp"
		android:orientation="vertical"
		app:layout_constraintTop_toTopOf="@id/mobile"
		app:layout_constraintBottom_toBottomOf="@id/mobile"
		app:layout_constraintLeft_toLeftOf="@id/mobile">
		
		<View
			android:visibility="invisible"
			android:id="@+id/left_top"
			android:layout_marginBottom="5dp"
			android:background="@color/kroovColorTriggered"
			android:layout_height="match_parent"
			android:layout_width="10dp"
			android:layout_weight="1"/>
		
		<View
			android:visibility="invisible"
			android:id="@+id/left_bottom"
			android:layout_marginTop="5dp"
			android:background="@color/kroovColorTriggered"
			android:layout_height="match_parent"
			android:layout_width="10dp"
			android:layout_weight="1"/>
	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/rights"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginTop="30dp"
		android:layout_marginBottom="30dp"
		android:orientation="vertical"
		app:layout_constraintTop_toTopOf="@id/mobile"
		app:layout_constraintBottom_toBottomOf="@id/mobile"
		app:layout_constraintRight_toRightOf="@id/mobile">
		
		<View
			android:visibility="invisible"
			android:id="@+id/right_top"
			android:layout_marginBottom="5dp"
			android:background="@color/kroovColorTriggered"
			android:layout_height="match_parent"
			android:layout_width="10dp"
			android:layout_weight="1"/>
		
		<View
			android:visibility="invisible"
			android:id="@+id/right_bottom"
			android:layout_marginTop="5dp"
			android:background="@color/kroovColorTriggered"
			android:layout_height="match_parent"
			android:layout_width="10dp"
			android:layout_weight="1"/>
	</LinearLayout>
	
	<TextView
		android:id="@+id/instructions"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/txt__edges_hint"
		android:gravity="center"
		android:fontFamily="serif-monospace"
		android:padding="30dp"
		app:layout_constraintBottom_toBottomOf="@+id/mobile"
		app:layout_constraintEnd_toEndOf="@+id/mobile"
		app:layout_constraintStart_toStartOf="@+id/mobile"
		app:layout_constraintTop_toTopOf="@+id/mobile" />
	
	<TextView
		android:id="@+id/addEdge"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/kroov_round_silk_dark"
		android:padding="10dp"
		android:fontFamily="serif-monospace"
		android:onClick="_new"
		android:text="Add Edge"
		app:layout_constraintEnd_toStartOf="@+id/rights"
		app:layout_constraintStart_toEndOf="@+id/lefts"
		app:layout_constraintTop_toBottomOf="@+id/instructions" />
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/kroov_round_silk_dark"
		android:padding="10dp"
		android:fontFamily="serif-monospace"
		android:layout_marginTop="10dp"
		android:onClick="_apply"
		android:text="Apply"
		app:layout_constraintEnd_toStartOf="@+id/addEdge"
		app:layout_constraintStart_toEndOf="@+id/addEdge"
		app:layout_constraintTop_toBottomOf="@+id/addEdge" />

</androidx.constraintlayout.widget.ConstraintLayout>