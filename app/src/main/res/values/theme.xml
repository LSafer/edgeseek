<?xml version="1.0" encoding="utf-8"?>
<resources>
	<attr name="colorBackground" format="color" />
	<attr name="colorAccent" format="color" />
	<attr name="colorPrimary" format="color" />
	<attr name="colorPrimaryDark" format="color" />
	<attr name="max" format="integer" />
	<attr name="moduleMobileCenterColor" format="color" />
	<attr name="moduleMobileStartColor" format="color" />
	<attr name="moduleMobileEndColor" format="color" />
	<attr name="moduleMobileButtonColor" format="color" />

	<style name="Black" parent="Theme.AppCompat.NoActionBar">
		<!-- colors -->
		<item name="colorPrimary">@color/blackColorPrimary</item>
		<item name="colorPrimaryDark">@color/blackColorPrimaryDark</item>
		<item name="colorAccent">@color/blackColorAccent</item>
		<item name="colorBackground">@color/blackColorBackground</item>
		<item name="colorBackgroundFloating">@color/blackColorBackgroundFloating</item>
		<!-- status bar -->
		<item name="android:statusBarColor">@color/blackColorBackground</item>
		<item name="android:windowLightStatusBar">false</item>
		<!-- text -->
		<item name="android:textColorPrimary">@android:color/white</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="textColorAlertDialogListItem">@android:color/white</item>
		<item name="android:actionMenuTextColor">@android:color/white</item>
		<!-- dialog -->
		<item name="dialogCornerRadius">25dp</item>
		<!-- module mobile -->
		<item name="moduleMobileCenterColor">@color/blackModuleMobileCenterColor</item>
		<item name="moduleMobileStartColor">@color/blackModuleMobileStartColor</item>
		<item name="moduleMobileEndColor">@color/blackModuleMobileEndColor</item>
		<item name="moduleMobileButtonColor">@color/blackModuleMobileButtonColor</item>
	</style>

