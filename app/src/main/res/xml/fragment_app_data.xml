<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory app:title="@string/application">
		<SwitchPreference
			app:key="activated"
			app:summary="@string/_des_pref_app_activation"
			app:title="@string/activation" />
		<Preference
			app:summary="@string/_des_pref_permissions"
			app:title="@string/permissions">
			<intent
				android:targetClass="lsafer.edgeseek.activity.PermissionsActivity"
				android:targetPackage="lsafer.edgeseek" />
		</Preference>
	</PreferenceCategory>
	<PreferenceCategory app:title="@string/job">
		<Preference
			app:summary="@string/_des_pref_edges"
			app:title="@string/edges">
			<intent
				android:targetClass="lsafer.edgeseek.activity.EdgesActivity"
				android:targetPackage="lsafer.edgeseek" />
		</Preference>
		<SwitchPreference
			app:key="auto_boot"
			app:summary="@string/_des_pref_auto_boot"
			app:title="@string/auto_boot" />
		<SwitchPreference
			app:key="auto_brightness"
			app:summary="@string/_des_pref_auto_brightness"
			app:title="@string/auto_brightness" />
	</PreferenceCategory>
	<PreferenceCategory app:title="@string/misc">
		<DropDownPreference
			app:entries="@array/themes"
			app:entryValues="@array/themes_alias"
			app:key="theme"
			app:summary="@string/_des_pref_theme"
			app:title="@string/theme" />
		<Preference
			app:summary="@string/_des_pref_about"
			app:title="@string/about">
			<intent
				android:targetClass="lsafer.edgeseek.activity.AboutActivity"
				android:targetPackage="lsafer.edgeseek" />
		</Preference>
	</PreferenceCategory>
	<!-- to add a gap between the bottom of the list and the screen -->
	<Preference />
</PreferenceScreen>